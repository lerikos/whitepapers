<p id="notice"><%= notice %></p>

<h1>Listing Papers</h1>

<div id="papers">
  <% @papers.each do |paper| %>
    <h2><%= link_to paper.title, paper %></h2>
    <%= simple_format paper.summary %>
    <p>Tags: <%= paper.tag_list %></p>
    <p><%= link_to "Show Whitepaper", paper %></p>
  <% end %>
</div>

